<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="50dp"
        android:text="设置"
        android:textColor="#fff"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/et_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:background="@drawable/bg_live_title_edit"
        android:drawableRight="@drawable/ic_edit"
        android:hint="在此输入直播间标题"
        android:inputType="text"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textColorHint="@color/divider_color"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/tv_startLive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:drawableTop="@drawable/img_start_live"
        android:gravity="center"
        android:text="开始直播"
        android:textColor="#fff"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/img_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/ic_close_live" />
</LinearLayout>