<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:toggle="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_selector"
        android:orientation="horizontal"
        android:padding="10dp">

        <sinia.com.bobo.view.CircleImageView
            android:id="@+id/img_head"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_head_notlogin" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/img_head"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微山扑鱼武工队"
                android:textColor="@color/textblackColor"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="类别：娱乐"
                android:textColor="@color/textblackColor2"
                android:textSize="13sp" />
        </LinearLayout>

        <com.zcw.togglebutton.ToggleButton
            android:id="@+id/tgb_fee"
            android:layout_width="52dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            toggle:tbBorderWidth="1dp"
            toggle:tbOffBorderColor="#ccc"
            toggle:tbOffColor="#C7C7C7"
            toggle:tbOnColor="@color/theme_green"
            toggle:tbSpotColor="#fff" />
    </RelativeLayout>
</LinearLayout>