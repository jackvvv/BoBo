<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zhy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <sinia.com.bobo.view.RoundImageView
            android:id="@+id/img"
            android:layout_width="180dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher"
            zhy:borderRadius="4dp"
            zhy:type="round" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="微山扑鱼武工队微山扑鱼武工队微山扑鱼武工队微山扑鱼武工队微山扑鱼武工队"
                android:textColor="@color/textblackColor"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:drawableLeft="@drawable/ic_head_small"
                android:drawablePadding="10dp"
                android:singleLine="true"
                android:text="white五五开"
                android:textColor="@color/theme_green"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:drawableLeft="@drawable/ic_attention"
                android:drawablePadding="10dp"
                android:singleLine="true"
                android:text="21.1W"
                android:textColor="@color/textblackColor2"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@drawable/bg_type"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="类别：娱乐"
                android:textColor="@color/textblackColor2"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>